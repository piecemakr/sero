{
  "name": "@sero/core",
  "version": "0.1.0",
  "description": "Core transition coordinator for Next.js App Router (framework-agnostic).",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Troy Hancock",
  "homepage": "https://github.com/troyhancock/sero#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/troyhancock/sero.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/troyhancock/sero/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "tsc -w -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "npm run build --workspace=..",
    "size": "size-limit",
    "analyze": "npx bundlesize"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4 KB"
    }
  ],
  "keywords": [
    "nextjs",
    "app router",
    "transitions",
    "view-transitions",
    "navigation"
  ],
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
