{
  "name": "sero",
  "version": "0.1.0",
  "description": "Framework-agnostic route transitions for Next.js App Router",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'",
    "publish:npm": "npm publish --workspaces --access public",
    "publish:github": "npm publish --workspaces --registry https://npm.pkg.github.com",
    "version": "npm version --workspaces",
    "prepublish": "npm run build && npm run typecheck",
    "release": "npm run prepublish && npm run publish:npm",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release:ci": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.5.4"
  }
}
